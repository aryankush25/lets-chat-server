{
  "name": "lets-chat-server",
  "version": "1.0.0",
  "description": "This is a let's chat server.",
  "main": "src/index.js",
  "scripts": {
    "lint": "tslint -p tsconfig.json",
    "clean": "rm -rf build",
    "build:only": "./node_modules/.bin/tsc --build",
    "build": "npm run clean && npm run build:only",
    "migrate": "npm run build && ./node_modules/typeorm/cli.js migration:run",
    "migrate:generate": "npm run build && ./node_modules/typeorm/cli.js migration:generate -n",
    "start:build": "node -r dotenv/config build/index.js",
    "start": "npm run migrate && npm run start:build",
    "start:dev": "npm run build:only && npm run start:build",
    "dev": "npm run migrate && nodemon"
  },
  "author": "Aryan Agarwal",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "ramda": "^0.27.1",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^3.1.0",
    "typeorm": "^0.2.29",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.0.1",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.20",
    "@types/ramda": "^0.27.36",
    "@types/socket.io": "^2.1.12",
    "@types/uuid": "^8.3.0",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.3"
  }
}
